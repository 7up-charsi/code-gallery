{
  "name": "code-gallery",
  "private": true,
  "scripts": {
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "pnpm clean:node_modules & pnpm clean:lock",
    "clean:node_modules": "pnpm rimraf ./full-stack/**/node_modules ./front-end/node_modules -g && rm -rf ./node_modules",
    "clean:lock": "rm -fr ./pnpm-lock.yaml",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@radix-ui/colors": "^3.0.0",
    "@repo/meta": "workspace:*",
    "@repo/ui": "workspace:*",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@typeweave/plugin": "^1.1.7",
    "autoprefixer": "^10.4.20",
    "husky": "^9.1.6",
    "postcss": "^8.4.47",
    "postcss-import": "^16.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-sort-imports": "^1.8.6",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^6.0.1",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.13",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.14",
    "eslint-config-prettier": "^9.1.0",
    "vercel": "^37.6.0"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@typeweave/react": "^4.2.12",
    "@typeweave/react-utils": "^1.2.0",
    "lucide-react": "^0.414.0",
    "mathjs": "^13.1.1",
    "next": "14.2.14",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-toastify": "^10.0.5",
    "tailwind-merge": "^2.5.2",
    "uuid": "^10.0.0"
  },
  "packageManager": "pnpm@9.11.0"
}

