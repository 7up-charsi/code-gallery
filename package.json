{
  "name": "code-gallery",
  "private": true,
  "scripts": {
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:node_modules": "pnpm rimraf ./full-stack/**/node_modules ./front-end/node_modules -g && rm -rf ./node_modules",
    "clean:lock": "rm -fr ./pnpm-lock.yaml",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@repo/meta": "workspace:*",
    "@repo/ui": "workspace:*",
    "@types/node": "^22.6.1",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@typeweave/plugin": "^1.1.6",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-import": "^16.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-sort-imports": "^1.8.6",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.13",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2",
    "vercel": "^37.5.4"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@typeweave/react": "^4.2.10",
    "lucide-react": "^0.414.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-toastify": "^10.0.5",
    "tailwind-merge": "^2.5.2"
  },
  "packageManager": "pnpm@9.11.0"
}
