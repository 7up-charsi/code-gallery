{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],

      // only for easy i18nConfig access in middleware
      "@/contact-form/*": [
        "./app/(i18n)/i18n/[locale]/contact-form/*"
      ],
      "@/shopping-cart/*": [
        "./app/(i18n)/i18n/[locale]/shopping-cart/*"
      ],
      "@/mortgage-calculator/*": [
        "./app/(i18n)/i18n/[locale]/mortgage-calculator/*"
      ],
      "@/multistep-form/*": [
        "./app/(i18n)/i18n/[locale]/multistep-form/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

